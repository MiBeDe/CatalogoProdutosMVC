@{
    ViewData["Title"] = "Detalhes";
}
<div class="container" style="max-width: 360px;">
    <div id="carousel_produtos" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner" style="height: 25em;">
            <div class="carousel-item active" id="img_carousel-01">
                <img src="~/assets/images/camiseta_a_onda_307_1_20190429111651.webp" alt="img_01" style="max-width: 360px; min-width: 360px; height: 25em;" />
            </div>
            <div class="carousel-item">
                <img src="~/assets/images/camiseta_o_grito_282_3_20190314163301.webp" alt="img_02" style="max-width: 360px; min-width: 360px; height: 25em;" />
            </div>
            <div class="carousel-item">
                <img src="~/assets/images/camisetas-de-rock.jpg" alt="img_03" style="max-width: 360px; height: 25em;" />
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carousel_produtos" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carousel_produtos" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Proximo</span>
        </button>
    </div>
</div>